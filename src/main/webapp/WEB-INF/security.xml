<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                 http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                 http://www.springframework.org/schema/security
                 http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http access-denied-page="/error403.jsp">
        <intercept-url pattern="/WEB-INF/pages/routeView**" access="ROLE_ADMIN"/>
        <intercept-url pattern="/WEB-INF/pages/stationView**" access="ROLE_ADMIN"/>
        <intercept-url pattern="/WEB-INF/pages/trainView**" access="ROLE_ADMIN"/>
        <intercept-url pattern="/WEB-INF/pages/scheduleView/schedule.jsp" access="ROLE_CLIENT,ROLE_ADMIN"/>
        <intercept-url pattern="/WEB-INF/pages/trainView**" access="ROLE_ADMIN"/>


        <form-login login-page="/WEB-INF/pages/userView/login.jsp" default-target-url="/scheduleView/schedule"
                    authentication-failure-url="/login.jsp?error=true" />
        <logout logout-url="/logout" logout-success-url="/index.jsp"/>

        <anonymous username="guest" granted-authority="ROLE_ANONYMOUS" />
        <remember-me />
    </http>

    <beans:bean id="daoAuthenticationProvider"
                class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
        <beans:property name="userDetailsService" ref="userDetailsServiceImpl"/>
    </beans:bean>

    <beans:bean id="authenticationManager"
                class="org.springframework.security.authentication.ProviderManager">
        <beans:property name="providers">
            <beans:list>
                <beans:ref local="daoAuthenticationProvider" />
            </beans:list>
        </beans:property>
    </beans:bean>

    <authentication-manager>
        <authentication-provider user-service-ref="userDetailsServiceImpl">
        </authentication-provider>
    </authentication-manager>
</beans:beans>